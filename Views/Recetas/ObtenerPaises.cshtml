@{
	ViewData["Title"] = "ObtenerPaises";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Pais>
<div class="text-center">
	<h1>Paises</h1>
	<a href="@Url.Action("CrearPais", "Recetas")" class="btn btn-primary mt-3"><i class="fa fa-arrow-left"></i> Crear Pais</a>
	<a href="@Url.Action("CrearReceta", "Recetas")" class="btn btn-primary mt-3"><i class="fa fa-arrow-left"></i> Crear Receta</a>
	<p>Pulsar en la imagen para ir a sus platos tradicionales</p>
</div>

<div class="d-flex justify-content-center">
	<div class="row">
		@foreach (var pais in Model)
		{
			<div class="col-md-4 mb-3">
				<div class="text-center">
					<h3>@pais.Nombre</h3>
					<a href="@Url.Action("ObtenerRecetas", "Recetas", new { id = pais.Id })">
						<img src="@pais.Bandera" style="width: 300px; height: 200px;" alt="@pais.Nombre" class="mr-3">
					</a>

				</div>
			</div>
		}
	</div>
</div>
